                  <p class="text-gray-500 font-light text-sm"><%= data?.product_description%></p>
                </div>
                <div class="">
                <a href="/admin/listing/<%= data._id  %>" class="px-3 py-1 bg-rose-600 text-sm text-white rounded-lg hover:bg-rose-700 focus:ring-1 focus:ring-rose-700">Add to cart</a>
                <button class="px-3 py-1 bg-indigo-600 text-sm text-white rounded-lg hover:bg-indigo-700 focus:ring-1 focus:ring-indigo-700">WishList</button>

                </div>
              </div>
            </div>
          </div>
        </li>
        </ul>
          </div>
  </div>
